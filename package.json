{
  "author": "Dario Sechi",
  "dependencies": {
    "long": "^5.2.3",
    "protobufjs": "^7.2.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@aracna/core": "^1.1.63",
    "@microsoft/api-extractor": "^7.38.5",
    "@types/node": "^20.10.4",
    "@vitest/coverage-v8": "^1.0.2",
    "@vitest/ui": "^1.0.2",
    "esbuild": "^0.19.8",
    "glob": "^10.3.10",
    "prettier": "^3.1.0",
    "ts-proto": "^1.165.1",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3",
    "vitest": "^1.0.2"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "exports": {
    "import": "./index.js",
    "require": "./index.cjs",
    "types": "./index.d.ts"
  },
  "license": "MIT",
  "main": "index.cjs",
  "module": "index.js",
  "name": "@aracna/fcm",
  "prettier": {
    "jsxSingleQuote": true,
    "printWidth": 160,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "publishConfig": {
    "directory": "dist"
  },
  "repository": "https://github.com/aracna/fcm",
  "scripts": {
    "build": "rm -rf dist && node esbuild.mjs && pnpm tsc && pnpm api-extractor run --local",
    "generate-proto": "protoc --plugin=node_modules/.bin/protoc-gen-ts_proto --ts_proto_opt=esModuleInterop=true --ts_proto_opt=forceLong=bigint --ts_proto_opt=importSuffix=.js --ts_proto_opt=useOptionals=messages --ts_proto_out=src/proto -I=assets assets/*.proto && prettier --write src/proto",
    "prepublish": "pnpm test && pnpm build && pnpm version patch && cp LICENSE package.json README.md dist",
    "test": "vitest run"
  },
  "sideEffects": false,
  "type": "module",
  "types": "index.d.ts",
  "version": "1.1.61"
}
